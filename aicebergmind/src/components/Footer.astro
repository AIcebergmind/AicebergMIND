---
const today = new Date();
---

<footer class="minimal-footer">
	<div class="footer-content">
		<!-- Logo centrato -->
		<div class="footer-logo-section">
			<img src="/logo/AIceberg_mind_logo_gray.svg" alt="AIceberg Mind" class="footer-logo-minimal">
		</div>
		
		<!-- Links essenziali in riga -->
		<div class="footer-links-minimal">
			<a href="#about">About</a>
			<a href="/blog">Blog</a>
			<a href="#projects">Projects</a>
			<a href="#team">Team</a>
			<a href="#philosophy">Philosophy</a>
			<a href="/faq">FAQ</a>
			<a href="/credits">Credits</a>
			<a href="/legal-notices">Legal Notices</a>
		</div>
		
		<!-- Copyright + social in una riga -->
		<div class="footer-bottom-minimal">
			<p>&copy; {today.getFullYear()} AIceberg Mind</p>
			<div class="social-minimal">
				<a href="https://twitter.com/astrodotbuild" target="_blank" aria-label="Twitter">
					<svg viewBox="0 0 16 16" width="16" height="16" fill="currentColor">

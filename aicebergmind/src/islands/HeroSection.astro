---
// Hero Section Island
// Sezione hero principale con animazioni iceberg e scroll arrow
---

<section class="hero hero-editorial" id="hero">
  <!-- Sticky Section Title (Desktop only) -->
  <div class="section-title-sticky" data-section="hero">
    <div class="section-number-sticky">â†—</div>
    <div class="section-title-text">AIceberg Mind</div>
  </div>
  
  <!-- Iceberg Animation Background -->
  <div class="iceberg-animation">
    <div class="iceberg-shape iceberg-1"></div>
    <div class="iceberg-shape iceberg-2"></div>
    <div class="iceberg-shape iceberg-3"></div>
    <div class="geometric-shape geo-triangle-1"></div>
    <div class="geometric-shape geo-triangle-2"></div>
    <div class="geometric-shape geo-circle-1"></div>
    <div class="geometric-shape geo-circle-2"></div>
    <div class="geometric-shape geo-line-1"></div>
    <div class="geometric-shape geo-line-2"></div>
    <div class="geometric-shape geo-diamond"></div>
  </div>
  
  <div class="hero-content-editorial">
    <canvas id="iceberg" class="hero-canvas"></canvas>
    <img src="/logo/AIceberg_mind_logo_color.svg" alt="AIceberg Mind Logo" class="AicebergMindLogo hero-logo-scroll logo-zoom-entrance">
    <h1 class="hero-title-editorial letter-explosion">
      <span class="letter-line">
        <span class="letter ai-letter" data-delay="0">A</span><span class="letter ai-letter" data-delay="0.1">I</span><span class="letter" data-delay="0.2">C</span><span class="letter" data-delay="0.3">E</span><span class="letter" data-delay="0.4">B</span><span class="letter" data-delay="0.5">E</span><span class="letter" data-delay="0.6">R</span><span class="letter" data-delay="0.7">G</span>
      </span>
      <br>
      <span class="letter-line">
        <span class="letter" data-delay="0.8">M</span><span class="letter" data-delay="0.9">I</span><span class="letter" data-delay="1.0">N</span><span class="letter" data-delay="1.1">D</span>
      </span>
    </h1>
    <p class="hero-subtitle-editorial subtitle-reveal">
      <span class="subtitle-line" data-delay="0">
        <span class="word" data-delay="0">Depth</span>
        <span class="word" data-delay="0.1">is</span>
        <span class="word" data-delay="0.2">not</span>
        <span class="word" data-delay="0.3">a</span>
        <span class="word highlight-word" data-delay="0.4">feature</span><span class="punctuation">.</span>
      </span>
      <br class="subtitle-break">
      <span class="subtitle-line" data-delay="0.5">
        <span class="word" data-delay="0.6">It</span>
        <span class="word" data-delay="0.7">is</span>
        <span class="word" data-delay="0.8">our</span>
        <span class="word accent-word" data-delay="0.9">nature</span>
      </span>
    </p>
  </div>


  <svg class="scroll-down-arrow" viewBox="0 0 24 24">
    <path d="M12 5v14M12 19l-6-6M12 19l6-6" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</section>
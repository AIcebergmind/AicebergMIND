<style>
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .intro-text {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .references-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .reference-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .reference-card:hover {
    background: rgba(0, 212, 255, 0.05);
    border-color: rgba(0, 212, 255, 0.2);
    transform: translateY(-3px);
  }

  .reference-title {
    font-family: var(--font-display);
    font-size: 1.4rem;
    font-weight: 600;
    color: #00D4FF;
    margin-bottom: 1rem;
  }

  .reference-description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    font-style: italic;
  }

  .wireframe-concept {
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    margin-top: 2rem;
  }

  .concept-text {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    font-style: italic;
  }

  .concept-text strong {
    color: #00D4FF;
    font-weight: 600;
  }

  .feature-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .feature-item:hover {
    background: rgba(0, 212, 255, 0.03);
    border-color: rgba(0, 212, 255, 0.15);
  }

  .feature-icon {
    font-size: 1.5rem;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 212, 255, 0.1);
    border-radius: 50%;
    flex-shrink: 0;
  }

  .feature-content {
    flex: 1;
  }

  .feature-title {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 600;
    color: #00D4FF;
    margin-bottom: 0.5rem;
  }

  .feature-description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .references-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .reference-card,
    .wireframe-concept {
      padding: 1.5rem;
    }

    .feature-item {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .section-header {
      margin-bottom: 2rem;
    }
  }
</style>
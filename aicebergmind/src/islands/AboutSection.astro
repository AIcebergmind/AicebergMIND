<!-- Audience Showcase Animation Script -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const audienceItems = document.querySelectorAll('.audience-item');
  
  // Intersection Observer for staggered animation
  const audienceObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const delay = parseFloat(entry.target.dataset.delay) || 0;
        
        setTimeout(() => {
          entry.target.classList.add('animate-in');
        }, delay * 500); // 500ms between each item
        
        // Unobserve after animation
        audienceObserver.unobserve(entry.target);
      }
    });
  }, {
    threshold: 0.2,
    rootMargin: '-50px'
  });
  
  // Magnetic hover effect
  audienceItems.forEach((item) => {
    // Observe for animation
    audienceObserver.observe(item);
    
    // Magnetic mouse tracking
    item.addEventListener('mousemove', (e) => {
      const rect = item.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      const centerX = rect.width / 2;
      const centerY = rect.height / 2;
      
      const deltaX = (x - centerX) / centerX;
      const deltaY = (y - centerY) / centerY;
      
      const tiltX = deltaY * 5; // Max 5 degrees
      const tiltY = -deltaX * 5;
      
      item.style.transform = `translateY(-8px) scale(1.02) perspective(1000px) rotateX(${tiltX}deg) rotateY(${tiltY}deg)`;
    });
    
    item.addEventListener('mouseleave', () => {
      item.style.transform = 'translateY(0) scale(1) perspective(1000px) rotateX(0deg) rotateY(0deg)';
    });
    
    // Click effect
    item.addEventListener('click', () => {
      item.style.animation = 'audiencePulse 0.6s ease-out';
      setTimeout(() => {
        item.style.animation = '';
      }, 600);
    });
  });
  
  console.log('✅ Audience Showcase with magnetic effects initialized');
});
</script>

<style>
/* Quick click pulse animation */
@keyframes audiencePulse {
  0% { transform: translateY(-8px) scale(1.02); }
  50% { transform: translateY(-12px) scale(1.08); }
  100% { transform: translateY(-8px) scale(1.02); }
}
</style>
---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

// Import Islands
import HeroSection from '../islands/HeroSection.astro';
import SubHeroSection from '../islands/SubHeroSection.astro';
import AboutSection from '../islands/AboutSection.astro';
import ProjectsSection from '../islands/ProjectsSection.astro';
import ChannelsSection from '../islands/ChannelsSection.astro';
import TeamSection from '../islands/TeamSection.astro';
import PillarsSection from '../islands/PillarsSection.astro';
import EthicsSection from '../islands/EthicsSection.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		
		<!-- Homepage-specific SEO enhancements -->
		<meta property="og:title" content="AIcebergMind — Smart Content, Crafted with AI & Science" />
		<meta property="og:description" content="From playful stories to thoughtful printables — AIcebergMind creates digital content for kids, teens, students, and seniors. Powered by science, empathy, and mindful AI." />
		
		<meta name="twitter:title" content="AIcebergMind — Smart Content, Crafted with AI & Care" />
		<meta name="twitter:description" content="Discover stories, printables, and digital tools for curious learners of all ages — crafted with care, inspired by science, and enhanced by ethical AI." />
		
		<!-- Additional structured data for homepage -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "WebPage",
			"name": "AIcebergMind - AI Tools for Deep Thinking & Discovery",
			"description": "Deep dive into discovery and thinking with interactive AI tools for cognitive development and creative learning.",
			"url": "https://aicebergmind.com",
			"mainEntity": {
				"@type": "Organization",
				"name": "AIcebergMind",
				"slogan": "Smart Content, Crafted with AI & Science",
				"description": "Digital content creators specializing in educational tools, stories, and printables for learners of all ages.",
				"foundingDate": "2025",
				"specialty": ["AI-enhanced content", "educational tools", "creative learning", "digital storytelling"],
				"targetAudience": ["children", "students", "families", "educators", "lifelong learners"]
			}
		}
		</script>
	</head>
	<body>

		<!-- Placeholder per il menu mobile generato da JS hybrid -->
		<div id="hamburger-menu-placeholder"></div>

		<!-- Breadcrumb Navigation Placeholder -->
		<div id="breadcrumb-placeholder"></div>

		<Header />

    <!-- Hero Island -->
    <HeroSection />

    <!-- SubHero Island -->
    <SubHeroSection />

    <!-- About Island -->
    <AboutSection />

    <!-- Projects Island -->
    <ProjectsSection />

    <!-- Channels Island -->
    <ChannelsSection />

    <!-- Team Island -->
    <TeamSection />

    <!-- Pillars Island -->
    <PillarsSection />

    <!-- Ethics Island -->
    <EthicsSection />

		<Footer />

		<!-- Global UI Components -->
		<!-- Cookie Banner -->
		<div id="cookie-banner" class="cookie-banner hidden">
			<div class="cookie-content">
				<div class="cookie-icon">""</div>
				<div class="cookie-text">
					<h3>Experience & Analytics</h3>
					<p>We use cookies to enhance your experience and improve our service. By continuing, you accept our cookie use for analytics and performance optimization.</p>
				</div>
				<div class="cookie-actions">
					<button id="cookie-accept" class="cookie-btn cookie-accept">Accept All</button>
					<button id="cookie-decline" class="cookie-btn cookie-decline">Decline</button>
				</div>
			</div>
		</div>

		<!-- Support Sticky Button -->
		<div id="supportStickyButton" class="support-sticky-button hidden">
			<div class="support-progress-container">
				<div class="support-progress-bar"></div>
			</div>
			<button class="support-button" type="button" onclick="window.location.href='#marketplace'">
				<span class="support-icon">▣</span>
				<span class="support-text">Support Us</span>
			</button>
		</div>

		<!-- Global Scripts -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollToPlugin.min.js"></script>
		
		<!-- Component Scripts -->
		<script src="/js/main.js" type="module" defer is:inline></script>
		<script src="/js/cookie-banner.js" is:inline></script>
		<script src="/js/components/hamburger-menu-component.js" is:inline></script>
	</body>
</html>


